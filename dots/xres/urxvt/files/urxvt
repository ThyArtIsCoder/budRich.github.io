URxvt*underlineColor:        ylw
URxvt*highlightColor:        blu
URxvt*highlightTextColor:    mag
! URxvt*colorBD:             red
! URxvt*colorIT:             grn
! URxvt*colorUL:             blu

URxvt*perl-ext-common: default,matcher,url-select,keyboard-select

URxvt*intensityStyles:     true
URxvt*cursorBlink:         1
URxvt*scrollBar:           false
URxvt*internalBorder:      padd
URxvt*saveLines:           32767

! remove those annoying 'pop-ups'
URxvt*iso14755:            false
URxvt*iso14755_52:         false

URxvt*font:     xft:fnt3
URxvt*boldFont:       
URxvt*italicFont:     
URxvt*boldItalicFont: 
! URxvt*boldItalicFont:      xft:fnt1:style=bolditalic:pixelsize=fsz1

URxvt.url-launcher:         brws
URxvt.matcher.button:       1
URxvt.url-select.underline: true

URxvt.keysym.C-g:      perl:url-select:select_next
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! switch fonts:
URxvt.keysym.C-9: command: \033]710;xft:fnt2:size=fsz2\007
URxvt.keysym.C-0: command: \033]710;xft:fnt3\007

! M-s appends 'sudo' to line (~/.inputrc)
URxvt.keysym.CM-s:     searchable-scrollback:start
URxvt.keysym.M-s:      builtin:

URxvt*print-pipe: cat > $(echo /tmp/urxvt-dump.$(date +%Y-%m-%d_%H:%M:%S_%N))

! syntax:ssExcla

URxvt*cutchars: "\"()*,<>[]{}|\'"
