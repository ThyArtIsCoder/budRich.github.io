# syntax:bash



HISTCONTROL=ignoreboth:erasedups
HISTSIZE=1000000
HISTTIMEFORMAT='%F %T  '
HISTIGNORE=ls:cd:pwd


MPD_HOST="127.0.0.1"
MPD_PORT="6601"

export MPD_HOST
export MPD_PORT

export BROWSER=vivaldi-snapshot
export VISUAL=vim
export EDITOR=vim
export PAGER='less -RS'
export SYSTEMD_LESS=RSMK
export XDG_CONFIG_HOME="${HOME}/.config"

export QT_QPA_PLATFORMTHEME=qt5ct

GEM_HOME=$(ruby -e 'print Gem.user_dir')
export GEM_HOME


